<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <script type="text/javascript">
    document.domain = 'literasee.io';
  </script>
  {{#each styles as |style|}}
  <link rel="stylesheet" href="{{style}}"/>
  {{/each}}
</head>
<body>

  {{> infoHeader}}

  <div class="container">
  {{{body}}}
  </div>

  {{#each scripts as |script|}}
  <script src="{{script}}"></script>
  {{/each}}
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      tex2jax: {
        inlineMath: [ ['$','$'], ['\\(','\\)'] ],
        displayMath: [ ['$$', '$$'], ["\[", "\]"] ],
        processEscapes: true
      }
    });
  </script>
  <script>
    anchors.options = {
      placement: 'left',
    };
    anchors.add('h2, h3, h4, h5, h6');
  </script>

  <script>
    // control header visibility
    var prevScrollY = 0;

    document.addEventListener('scroll', function () {
      var infoEl = document.querySelector('header');
      var isScrollingDown = window.scrollY > prevScrollY;

      infoEl.style.top = isScrollingDown ? '-65px' : 0;
      prevScrollY = window.scrollY;
    });

    document.querySelectorAll('[data-pym-url]').forEach(function (el) {
      new pym.Parent(el.getAttribute('id'), el.getAttribute('data-pym-url'));
    });
  </script>

</body>
</html>
