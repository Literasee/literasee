<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>{{title}}</title>
  {{#each styles as |style|}}
  <link rel="stylesheet" href="{{style}}"/>
  {{/each}}
</head>
<body>

  <div class="container">
  {{{body}}}
  </div>

  {{#each scripts as |script|}}
  <script src="{{script}}"></script>
  {{/each}}
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      tex2jax: {
        inlineMath: [ ['$','$'], ['\\(','\\)'] ],
        displayMath: [ ['$$', '$$'], ["\[", "\]"] ],
        processEscapes: true
      }
    });
  </script>

  <div id="gist-info">
    <a href="http://twitter.com?status=Check out what I saw on Literasee! {{project.report_short_url}}"><img src="/public/TwitterLogo.png" alt="Twitter Logo"/></a>
    {{#if editUrl}}
      <a href="{{gist_url}}"><img src="/public/GitHub-Mark-32px.png" alt="GitHub Logo"/></a>
      <a href="{{editUrl}}">Edit</a>
    {{/if}}
  </div>

</body>
</html>
