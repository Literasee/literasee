.containerA {
  background-image: radial-gradient(at top, #E8F7F8 0%, #CCEBEE 100%);
  width: 100%;
  height: 35rem;
  display: flex;
  flex-direction: column;
  align-items: center;


  .nav {
    height: 5rem;
  }

  .icons {
    display: flex;
    justify-content: space-around;
    flex: 1;
    width: 100%;
    padding: 0 2rem;

    .icon {
      flex-basis: 0;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      align-items: center;

      h2 {
        padding-top: 1rem;
      }

      &:first-child h2 {
        margin-left: -0.8rem;
      }

      p {
        font-weight: 300;
        text-align: center;
        margin: 0 3rem;
      }
    }
  }

  .cta {
    height: 6rem;
  }
}
