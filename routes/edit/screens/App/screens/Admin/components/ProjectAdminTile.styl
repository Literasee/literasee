@import '~styles/variables';
@import '~app';

.adminPanel {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #FFFFFF;
  box-shadow: 0px 3px 11px 0px rgba(182,182,188,0.27);
  border-radius: 3px;
  margin-bottom: 1rem;
  padding: 1.2rem;

  h4 {
    font-size: $font-size-h5;
    font-weight: $font-weight-bold;
    color: $gray-dark;
    margin: 0;
  }

  p {
    font-size: 0.98rem;
    font-weight: $font-weight-light;
    margin: 0.4rem 0 0;
  }

  button {
    display: flex;
    align-items: center;
    opacity: 0;
  }

  span {
    padding-right: 0.4rem;
  }

  >:first-child {
    margin-right: 0.6rem;
  }
  
  &:hover {
    button {
      opacity: 1;
    }
  }
}

.ignoredPanel {
  opacity: 0.7;

  &:hover {
    opacity: 1;
  }

  h4 {
    font-weight: $font-weight-light;
  }

  img {
    transform: rotate(180deg);
  }
}
