@import '~styles/variables';

.container {
  padding-top: 4rem;
  align-self: stretch;

  h5 {
    margin-bottom: 0.3rem;
  }

  input {
    background: transparent;
    border: none;
    width: 100%;
    line-height: 1.5;
    outline: none;
    font-weight: $font-weight-light;
    color: rgba(black, 0.4);
  }
}

.input {
  display: flex;
  align-items: center;
  width: 90%;
  margin-top: 1.7rem;
  padding-right: 0.5rem;
  border-bottom: 1px solid rgba($gray, 0.6);
}

.keyword {
  display: inline-flex;
  align-items: baseline;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0px 3px 11px 0px rgba(182,182,188,0.27);
  border-radius: 100px;
  font-weight: $font-weight-header;
  font-size: $font-size-sm;
  color: #8DD167;
  padding: 0.4rem 1.2rem 0.2rem;
  margin: 1rem 1rem 0 0;
  text-transform: uppercase;

  button {
    background: transparent;
    border: none;
    padding-left: 0.7rem;
    padding-right: 0;
    outline: none;

    &:hover {
      img {
        opacity: 0.7;
      }
    }

    img {
      opacity: 0.1;
    }
  }
}
