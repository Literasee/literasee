@import '~styles/variables';
@import '~styles/buttons';

.container {
  display: flex;
  padding: 0.8rem 0;
  align-items: center;
}

.labelsContainer {
  display: flex;
  flex: 1;
  align-items: baseline;
  overflow: hidden;

  .titles {
    display: inherit;
    flex: 1;
    overflow: hidden;
    align-items: baseline;
    padding-right: 1rem;

    &.noSubTitle {
      align-items: flex-end;

      button {
        margin-left: -1.3rem;
      }
    }

    h3 {
      white-space: nowrap;
    }

    .description {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      font-size: $font-size-med;
      padding-right: 1rem;
    }
  }
}

.formContainer {
  display: flex;
  flex: 1;
  align-items: baseline;
  justify-content: space-between;

  .inputsContainer {
    flex: 1;
    display: flex;

    input {
      line-height: 2rem;
      margin-right: 1rem;
      flex: 1;

      .title {
        font-size: 1.3rem;
      }
    }
  }
}

.btnContainer {
  display: flex;
  padding-left: 2rem;
}

.headerBtn {
  composes: btn;
  composes: btn-primary;

  &:last-child {
    margin-left: 0.5rem;
  }
}

.hidden {
  display: none;
}
