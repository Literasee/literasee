.container {
  background: #F5F5F5;
  height: 3rem;
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.12);
  display: flex;
  align-items: center;
  padding-left: 1.2rem;
  z-index: 200;

  .buttonGroup {
    display: flex;
    padding-right: 0.5rem;
  }

  button {
    display: flex;
    align-items: center;
    background: transparent;
    border: none;
    border-right: 1px solid rgba(151, 151, 151, 0.4);
    padding: 0.2rem 0.8rem;

    &:last-child {
      border-right: none;
    }

    img {
      opacity: 0.4;
    }

    &:hover {
      img {
        opacity: 1;
      }
    }
  }
}
