@import '~styles/variables';
@import '~styles/buttons';

.container {
  background: #F5F5F5;
  height: 3rem;
  border-bottom: 1px solid lightgray;
  display: flex;
  justify-content: space-between;
  padding-left: 1.2rem;
  z-index: 200;
}

.nav {
  display: flex;
  align-items: baseline;
}

.navLink {
  composes: btn;

  display: flex;
  align-items: flex-start;
  align-self: flex-end;
  font-size: 20px;
  font-weight: 300;
  color: rgba(0, 0, 0, 0.5);
  border: none;
  padding: 10px 15px;

  &:hover {
    color: #000000;

    img {
      opacity: 1;
    }
  }

  &.active {
    color: #000000;
    background: #FFFFFF;
    border-radius: 8px 8px 0 0;
    border: 1px solid lightgray;
    border-bottom: none;
    margin-bottom: -1px;
    font-weight: 500;

    img {
      opacity: 1;
    }
  }

  * {
    padding: 0 0.35rem;
  }

  img {
    opacity: 0.25;
  }
}

.tools {
  display: flex;
  align-items: center;
  margin-right: 0.5rem;
}

.buttonGroup {
  display: flex;
  padding-right: 0.5rem;

  button {
    display: flex;
    align-items: center;
    background: transparent;
    border: none;
    border-right: 1px solid rgba(151, 151, 151, 0.4);
    padding: 0.2rem 0.8rem;

    &:last-child {
      border-right: none;
    }

    img {
      opacity: 0.4;
    }

    &:hover {
      img {
        opacity: 1;
      }
    }
  }
}

.modeToggle {
  composes: btn-group;
  composes: tools;
}

.toggleBtn {
  composes: btn;
  composes: btn-small;

  display: flex;
  align-items: center;

  &:hover, &.active {
    background: white;
    color: #000000;
  }

  * {
    padding: 0.2rem;
  }

  img {
    opacity: 0.4;
  }

  &:hover, &.active {
    img {
      opacity: 1;
    }
  }
}
