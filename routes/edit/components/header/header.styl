@import '~styles/variables';

.container {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 4rem;

  background: #FFFFFF;
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.18);
  z-index: 1;

  div {
    min-width: 200px;
  }

  div:nth-child(2) {
    flex-grow: 1;
    text-align: center;
  }

  div:last-child {
    text-align: right;
  }
}

.avatarLink {
  display: flex;
  align-items: center;
  padding: 0;

  &:hover {
    background: transparent;
    color: #000000;
  }

  img {
    border-radius: 30px;
    margin-right: 0.5rem;
  }
}
